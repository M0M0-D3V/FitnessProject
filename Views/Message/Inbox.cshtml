@model Container
@{
}
<a asp-action="Compose" asp-controller="Message" class="btn btn-sm btn-primary">Compose New Message</a>
<h3>Inbox</h3>
<table class="table table-striped table-light">
    <thead>
        <th>Sender</th>
        <th>Subject</th>
        <th>Message Body</th>
        <th>Recieved Date</th>
    </thead>
    @foreach(var message in Model.ReceivedMessages)
    {
        <tr>
            <td>@message.MessageFrom.FirstName @message.MessageFrom.LastName</td>
            <td>@message.Title</td>
            <td>@message.Content</td>
            <td>@message.CreatedAt.ToString("m")</td>
        </tr>
    }
</table>

<h3>Sent Messages</h3>
<table class="table table-striped table-dark">
    <thead>
        <th>Recipient</th>
        <th>Subject</th>
        <th>Message Body</th>
        <th>Sent Date</th>
    </thead>
    @foreach(var message in Model.SentMessages)
    {
        <tr>
            <td>@message.UserMessaged.FirstName @message.UserMessaged.LastName</td>
            <td>@message.Title</td>
            <td>@message.Content</td>
            <td>@message.CreatedAt.ToString("m")</td>
        </tr>
    }
</table>