@model Container

<div class="container">
    <h3>New Class Listing</h3>
    <form asp-action="ProcessClass" asp-controller="Fitness" method="POST">
        <div class="row">
            <div class="col-md-4">
                <label asp-for="@Model.Class.ClassName"></label>
                <input asp-for="@Model.Class.ClassName"><br>
                <span class="text-danger" asp-validation-for="@Model.Class.ClassName"></span>
                <label asp-for="@Model.Class.Location"></label>
                <input asp-for="@Model.Class.Location"><br>
                <span class="text-danger" asp-validation-for="@Model.Class.Location"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="@Model.Class.ClassSize"></label>
                <input asp-for="@Model.Class.ClassSize"><br>
                <span class="text-danger" asp-validation-for="@Model.Class.ClassSize"></span>
                <label asp-for="@Model.Class.ClassDescription"></label>
                <input asp-for="@Model.Class.ClassDescription"><br>
                <span class="text-danger" asp-validation-for="@Model.Class.ClassDescription"></span>
                <label asp-for="@Model.Class.ClassPhoto"></label>
                <input asp-for="@Model.Class.ClassPhoto"><br>
                <span class="text-danger" asp-validation-for="@Model.Class.ClassPhoto"></span>
                <label asp-for="@Model.Class.ClassVideo"></label>
                <input asp-for="@Model.Class.ClassVideo"><br>
                <span class="text-danger" asp-validation-for="@Model.Class.ClassVideo"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label asp-for="@Model.Class.ClassDate"></label>
                <input asp-for="@Model.Class.ClassDate"><br>
                <span class="text-danger" asp-validation-for="@Model.Class.ClassDate"></span>
                <div>
                    <label asp-for="@Model.Class.StartTime"></label>
                    <input asp-for="@Model.Class.StartTime"><br>
                    <span class="text-danger" asp-validation-for="@Model.Class.StartTime"></span>
                </div>
                <div>
                    <label asp-for="@Model.Class.EndTime"></label>
                    <input asp-for="@Model.Class.EndTime"><br>
                    <span class="text-danger" asp-validation-for="@Model.Class.EndTime"></span>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-sm btn-primary">Create</button>
    </form>
</div>