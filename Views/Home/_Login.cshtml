@model LoginUser
<div class="col-md-6">
    <h3>Login</h3>
    <form asp-action="LetMeIn" asp-controller="Home" method="POST">
        <div>
            <label asp-for="LoginEmail"></label>
            <span class="text-danger" asp-validation-for="LoginEmail"></span><br>
            <input asp-for="LoginEmail">
        </div>
        <div>
            <label asp-for="LoginPassword"></label>
            <span class="text-danger" asp-validation-for="LoginPassword"></span><br>
            <input asp-for="LoginPassword">
        </div>
        <button type="submit">Login</button>
    </form>
</div>