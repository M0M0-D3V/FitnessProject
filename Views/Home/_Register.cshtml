@model User
<div class="col-md-6">
    <h3>Register</h3>
    <form asp-action="Register" asp-controller="Home" method="POST">
        <div>
            <label asp-for="FirstName"></label>
            <span class="text-danger" asp-validation-for="FirstName"></span><br>
            <input asp-for="FirstName">
        </div>
        <div>
            <label asp-for="LastName"></label>
            <span class="text-danger" asp-validation-for="LastName"></span><br>
            <input asp-for="LastName">
        </div>
        <div>
            <label asp-for="Email"></label>
            <span class="text-danger" asp-validation-for="Email"></span><br>
            <input asp-for="Email">
        </div>
        <div>
            <label asp-for="Password"></label>
            <span class="text-danger" asp-validation-for="Password"></span><br>
            <input asp-for="Password">
        </div>
        <div>
            <label asp-for="Confirm"></label>
            <span class="text-danger" asp-validation-for="Confirm"></span><br>
            <input asp-for="Confirm">
        </div>
        <button type="submit">Register</button>
    </form>
</div>